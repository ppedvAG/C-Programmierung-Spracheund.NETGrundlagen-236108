<Window x:Class="M016.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="M016"
		Height="450"
		Width="300"
		WindowStartupLocation="CenterScreen">
    <StackPanel>
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Beenden" Click="MenuItem_Click"/>
			</MenuItem>
		</Menu>
		<Button Content="Mein zweiter Button" FontSize="24" Click="Button_Click"/>
		<TextBlock Name="TB" Background="Aqua" TextAlignment="Center" FontSize="24"/>
		<ComboBox Name="CB" SelectionChanged="CB_SelectionChanged"/>
		<TextBlock Text="Das ist ein sehr langer Text der von links nach rechts scrollt"
				   FontSize="24"
				   Name="Scroller"/>
		<ListBox Name="LB" SelectionMode="Extended" SelectionChanged="LB_SelectionChanged"/>
		<CheckBox Content="CheckBox1" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
				  Name="CB1" IsChecked="True"/>
		<RadioButton GroupName="RB1" Content="RadioButton" IsChecked="True"
					 Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<RadioButton GroupName="RB1" Content="RadioButton"/>
		<RadioButton GroupName="RB1" Content="RadioButton"/>
		<Separator/>
		<RadioButton GroupName="RB2" Content="RadioButton" IsChecked="True"/>
		<RadioButton GroupName="RB2" Content="RadioButton"/>
	</StackPanel>
</Window>
